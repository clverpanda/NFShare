<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clverpanda.nfshare.fragments.TestFrag">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载测试"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启wifi发送"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintLeft_toRightOf="@+id/button"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textview测试"
        app:layout_constraintLeft_toLeftOf="@+id/button"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <com.hanks.htextview.evaporate.EvaporateTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="this is init sentence"
        android:textSize="14sp"
        android:id="@+id/test_textView"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/btn_server_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="52dp"
        android:text="服务器测试（添加）"
        app:layout_constraintLeft_toLeftOf="@+id/test_textView"
        app:layout_constraintTop_toBottomOf="@+id/test_textView" />

    <Button
        android:id="@+id/btn_server_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:text="服务器测试（获取）"
        app:layout_constraintBottom_toBottomOf="@+id/btn_server_test"
        app:layout_constraintLeft_toRightOf="@+id/btn_server_test" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dialog测试"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_server_test"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_server_test" />
</android.support.constraint.ConstraintLayout>
