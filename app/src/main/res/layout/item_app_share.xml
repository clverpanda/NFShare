<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_app_share"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="@color/icons"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_height="60dp"
    android:layout_width="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/app_share_icon"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_blank_app"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/app_share_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/app_share_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/app_share_checkBox"
            android:layout_marginRight="24dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:ellipsize="end"/>

        <com.clverpanda.nfshare.Widget.AlwaysMarqueeTextView
            android:id="@+id/app_share_pkg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/app_share_icon"
            app:layout_constraintLeft_toRightOf="@+id/app_share_icon"
            app:layout_constraintRight_toLeftOf="@+id/app_share_checkBox"
            android:layout_marginRight="24dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"/>

        <CheckBox
            android:id="@+id/app_share_checkBox"
            android:layout_width="34dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="45dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.571" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>